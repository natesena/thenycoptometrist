// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Event type enumeration for type-safe metrics tracking
enum EventType {
  visit
  book_now_clicked
  phone_clicked
  email_clicked
  social_media_clicked
  product_referral_clicked
  blog_post_clicked
  external_link_clicked
}

// Metrics tracking model
model MetricsEvent {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  eventType EventType @map("event_type")
  url       String    // Full URL
  pathname  String    // Just the path for easier querying
  userAgent String?   @map("user_agent")
  referrer  String?
  eventData Json?     @map("event_data") // For click targets, additional metadata

  @@index([eventType])
  @@index([pathname])
  @@index([createdAt])
  @@map("metrics_events")
}

// Product referral models
model Product {
  id           String   @id @default(cuid())
  name         String   @db.VarChar(255)
  slug         String   @unique @db.VarChar(255)
  description   String   @db.Text
  categoryId    String?  @map("category_id") @db.VarChar(50)
  price        Decimal?  @db.Decimal(10, 2)
  referralUrl  String   @map("referral_url") @db.Text
  stock         Int?     @default(0)
  featured      Boolean   @default(false)
  available    Boolean   @default(true)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  categoryId    String?  @map("category_id") @db.VarChar(50)
  category      ProductCategory? @relation(fields: [categoryId], references: [id])
  images       Image[]   @relation("ProductImages")

  @@index([slug])
  @@index([categoryId, available])
  @@index([available, featured])
}

model Image {
  id           String   @id @default(cuid())
  url          String   @db.VarChar(500)
  alt          String?  @db.VarChar(125)
  width        Int?
  height       Int?
  filename     String?  @db.VarChar(255)
  mimeType     String?  @map("mime_type") @db.VarChar(100)
  createdAt    DateTime  @default(now()) @map("created_at")
  
  products     Product[] @relation("ProductImages")
  
  @@index([id])
}

model ProductCategory {
  id           String   @id @default(cuid())
  name         String   @db.VarChar(255)
  slug         String   @unique @db.VarChar(255)
  description   String?  @db.Text
  metaTitle    String?  @map("meta_title") @db.VarChar(70)
  metaDescription String?  @map("meta_description") @db.VarChar(160)
  parentId     String?  @map("parent_id") @db.VarChar(50)
  sort         Int?      @default(0)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  
  parent       ProductCategory? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children     ProductCategory[] @relation("CategoryHierarchy")
  products     Product[]
  
  @@index([slug])
  @@index([parentId, sort])
}
