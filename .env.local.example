# Production Database Configuration
# Get these from: Supabase Dashboard → Settings → Database
# Use "Transaction" mode for DIRECT_URL and "Session" mode for DATABASE_URL (connection pooling)
DATABASE_URL="your-supabase-connection-pooling-url"
DIRECT_URL="your-supabase-direct-url"

# Payload CMS Secret
# Generate a random string: openssl rand -base64 32
PAYLOAD_SECRET="your-payload-secret"

# Google Cloud Storage Configuration
# Get these from: GCP Console → IAM & Admin → Service Accounts
# Create a service account with Storage Object Admin role and download the JSON key
GCP_PROJECT_ID="your-gcp-project-id"
GCS_BUCKET_NAME="your-gcs-bucket-name"
GCS_PRIVATE_KEY_ID="your-gcs-private-key-id"
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nYOUR_PRIVATE_KEY_HERE\\n-----END PRIVATE KEY-----\\n"
GCS_CLIENT_EMAIL="your-gcs-service-account-email"
GCS_CLIENT_ID="your-gcs-client-id"
GCS_CLIENT_X509_CERT_URL="your-gcs-x509-cert-url"
